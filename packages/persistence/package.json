{
  "name": "@cynic/persistence",
  "version": "0.1.0",
  "description": "Persistence layer for CYNIC - PostgreSQL + Redis + Merkle DAG + PoJ Chain + Graph Overlay",
  "type": "module",
  "main": "src/index.js",
  "exports": {
    ".": "./src/index.js",
    "./postgres": "./src/postgres/client.js",
    "./redis": "./src/redis/client.js",
    "./sqlite": "./src/sqlite/index.js",
    "./repositories": "./src/postgres/repositories/index.js",
    "./postgres/repositories/*": "./src/postgres/repositories/*.js",
    "./postgres/repositories/poj-blocks": "./src/postgres/repositories/poj-blocks.js",
    "./dag": "./src/dag/index.js",
    "./poj": "./src/poj/index.js",
    "./graph": "./src/graph/index.js",
    "./vector": "./src/vector/index.js",
    "./factory": "./src/factory.js",
    "./fallback": "./src/fallback-factory.js",
    "./interfaces": "./src/interfaces/IRepository.js",
    "./services": "./src/services/index.js",
    "./services/*": "./src/services/*.js",
    "./services/trace-storage": "./src/services/trace-storage.js",
    "./services/codebase-indexer": "./src/services/codebase-indexer.js",
    "./postgres/migrate": "./src/postgres/migrate.js"
  },
  "scripts": {
    "test": "node --test test/*.test.js",
    "migrate": "node src/postgres/migrate.js"
  },
  "dependencies": {
    "cbor-x": "^1.6.0",
    "dotenv": "^17.2.3",
    "ioredis": "^5.3.2",
    "pg": "^8.11.3"
  },
  "peerDependencies": {
    "@cynic/core": "^0.1.0"
  },
  "optionalDependencies": {
    "better-sqlite3": "^11.0.0"
  },
  "license": "MIT"
}
