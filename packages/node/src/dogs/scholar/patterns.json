{
  "$schema": "../../schemas/dog-patterns.json",
  "dog": "scholar",
  "sefira": "Daat",
  "version": "1.0.0",
  "description": "L1 verification patterns for fact-checking and knowledge validation",

  "verificationChecks": {
    "description": "Checks to verify claims before accepting",
    "sourceVerification": {
      "required": ["citation", "reference", "link"],
      "preferred": ["official_docs", "source_code", "tests"],
      "suspicious": ["stackoverflow_only", "blog_post_only", "no_source"]
    },
    "claimTypes": {
      "factual": {
        "requiresVerification": true,
        "verificationMethods": ["check_docs", "check_code", "check_tests"]
      },
      "opinion": {
        "requiresVerification": false,
        "flagAs": "subjective"
      },
      "prediction": {
        "requiresVerification": false,
        "flagAs": "uncertain",
        "maxConfidence": 0.5
      }
    }
  },

  "knowledgeSources": {
    "description": "Trusted sources for verification",
    "tiers": {
      "tier1": {
        "description": "Highly trusted",
        "sources": ["source_code", "official_docs", "tests", "type_definitions"],
        "confidenceBoost": 0.2
      },
      "tier2": {
        "description": "Generally trusted",
        "sources": ["major_blog", "conference_talk", "book"],
        "confidenceBoost": 0.1
      },
      "tier3": {
        "description": "Verify carefully",
        "sources": ["stackoverflow", "reddit", "forum"],
        "confidenceBoost": 0
      }
    }
  },

  "factPatterns": {
    "description": "Patterns for extracting facts from code",
    "extraction": [
      {
        "type": "function_signature",
        "pattern": "function\\s+(\\w+)\\s*\\(([^)]*)\\)",
        "extracts": ["name", "params"]
      },
      {
        "type": "export",
        "pattern": "export\\s+(const|function|class)\\s+(\\w+)",
        "extracts": ["kind", "name"]
      },
      {
        "type": "import",
        "pattern": "import\\s+.*from\\s+['\"]([^'\"]+)['\"]",
        "extracts": ["source"]
      },
      {
        "type": "todo",
        "pattern": "//\\s*TODO:?\\s*(.+)",
        "extracts": ["task"]
      }
    ]
  },

  "hallucination_signals": {
    "description": "Signals that a claim might be hallucinated",
    "signals": [
      "mentions non-existent file",
      "claims feature that doesn't exist in codebase",
      "references function with wrong signature",
      "cites version that doesn't exist"
    ]
  },

  "learnedPatterns": [],

  "metadata": {
    "createdAt": "2026-02-02T00:00:00Z",
    "updatedAt": "2026-02-02T00:00:00Z",
    "learningEnabled": true
  }
}
